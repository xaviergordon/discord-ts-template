{
	"name": "discord-typescript-template",
	"version": "1.0.0",
	"main": "index.ts",
	"author": "xaviergordon",
	"scripts": {
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"build": "tsc",
		"start": "ts-node src/index.ts",
		"start:prod": "node dist/index.js",
		"register": "ts-node scripts/register.ts",
		"format": "prettier --config .prettierrc.yml 'src' 'scripts' --write"
	},
	"license": "MIT",
	"dependencies": {
		"@discordjs/rest": "^1.5.0",
		"chalk": "^4.1.2",
		"discord.js": "^14.12.1",
		"dotenv": "^16.0.1",
		"js-yaml": "^4.1.0",
		"mongoose": "^6.7.3",
		"ms": "^2.1.3",
		"simply-djs": "^4.1.1"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.5",
		"@types/ms": "^0.7.31",
		"@types/node": "^18.0.6",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	}
}
